<div class="wholePage">
  <!-- First section div -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 content">

      <%= render 'partials/dash_sidebar' %>

      <div class="col-md-9 dash-main-content">
        <% if user_signed_in? %>
        <div class="container-fluid center-flex-content">
          <div class="create-new-container">
            <br>
            <p class="dashboard-headers">Edit Event</p>

            <%= form_for @event do |f|  %>

            <div class="form-group center-flex-content">
              <%= f.label :title, class: "label-baseline" %>
              <%= f.text_field :title, class: 'form form-control form-padding event-form-width', :required => true %>
            </div>

            <div class="form-group center-flex-content">
              <label for='start_date' style="margin-right:47px;">Start Date</label>
              <%= f.text_field :start_date, class: 'start-date datepicker form date-time-width',placeholder:"DD/MM/YYYY", :required => true %>

              <%= f.label :"Start Time", class: 'form-padding caps', style:'margin:auto;' %>
              <%= f.text_field :start_time, class: 'form dateselect-time date-time-width', :required => true %>
            </div>

            <div>

              <div class="form-group center-flex-content">
                <label for='end_date' style="margin-right:46px">End Date</label>
                <%= f.text_field :end_date, class: 'end-date datepicker form form-padding date-time-width',placeholder:"DD/MM/YYYY", :required => true %>
                <%= f.label :"End Time", class: 'form-padding caps', style:'margin:auto;', :required => true %>
                <%= f.text_field :end_time, class: 'form dateselect-time form-padding date-time-width', :required => true %>
              </div>
            </div>

            <!-- EVENT REPEAT -->
            <div class="form-group center-flex-content">
              <%= f.label :event_repeat , class:'label-baseline caps' %>
              <div class="margin-right">
                <%= f.radio_button(:event_repeat, "Weekly") %>
                <%= label_tag(:event_repeat, "Weekly", class:'radio-spacing') %>
                <%= f.radio_button(:event_repeat, "Never") %>
                <%= label_tag(:event_repeat, "None", class:'radio-spacing') %>
              </div>
            </div>

            <!-- EVENT LOCATION -->
            <div class="form-group center-flex-content">
              <%= f.label :location , class:'label-baseline' %>
              <div class="">
                <%= f.radio_button(:event_location, "Ladner") %>
                <%= label_tag(:event_location, "Ladner", class:'radio-spacing') %>
                <%= f.radio_button(:event_location, "North Delta") %>
                <%= label_tag(:event_location, "North Delta", class:'radio-spacing') %>
                <%= f.radio_button(:event_location, "Tsawwassen") %>
                <%= label_tag(:event_location, "Tsawwassen") %>
              </div>
            </div>

            <!-- ADDRESS -->
            <div class="form-group center-flex-content">
              <%= f.label :address, class:'label-baseline' %>
              <%= f.text_field :address, class: 'form form-control form-padding event-form-width', :required => true %>
            </div>

            <!-- AGE GROUP -->
            <div class="form-group center-flex-content">
              <%= f.label :age_group, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :age_group_ids,
                AgeGroup.all,
                :id,
                :age,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

            <!-- <div class="form-group center-flex-content"> -->
            <%#= f.label :age_group %>
            <%#= f.radio_button(:age_group, "0-5") %>
            <%#= label_tag(:age, "0-5") %>
            <%#= f.radio_button(:age_group, "6-12") %>
            <%#= label_tag(:age, "6-12") %>
            <%#= f.radio_button(:age_group, "adult") %>
            <%#= label_tag(:age, "adult") %>
            <%#= f.radio_button(:age_group, "all") %>
            <%#= label_tag(:age, "all") %>
            <!-- </div> -->

            <!-- COST -->
            <div class="form-group center-flex-content">
              <%= f.label :cost, class:'label-baseline caps' %>
              <div class="margin-right">
                <%= f.radio_button(:cost, "Free") %>
                <%= label_tag(:cost, "Free", class:'radio-spacing') %>
                <%= f.radio_button(:cost, "Paid") %>
                <%= label_tag(:cost, "Paid", class:'radio-spacing') %>
              </div>
            </div>

            <!-- ACTIVITY TYPE -->
            <div class="form-group center-flex-content">
              <%= f.label :program_type, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :program_type_ids,
                ProgramType.all,
                :id,
                :name,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

            <!-- TAGS -->
            <div class="form-group center-flex-content">
              <%= f.label :EventTaggings, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :tag_ids,
                Tag.all,
                :id,
                :name,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>
            <!-- REGISTRATION -->
            <div class="form-group center-flex-content">
              <%= f.label :registration, "Registration", class:'label-baseline' %>
              <div class="">
                <%= f.radio_button(:registration, "Drop-in") %>
                <%= label_tag(:registration, "Drop-in", class:'radio-spacing') %>
                <%= f.radio_button(:registration, "Registration Required") %>
                <%= label_tag(:registration, "Registration Required", class:'radio-spacing') %>
              </div>
            </div>
            <!-- EVENT DESCRIPTION -->
            <div class="form-group">
              <%= f.label :description, class:'label-baseline' %>
              <%= f.text_area :description, class: 'form form-control form-padding event-form-width caps', :required => true %>
            </div>

            <!-- IMAGE UPLOADER -->
            <div class="form-group center-flex-content">
              <%= f.label :image, class: "label-baseline" %>
              <%= f.file_field :image  %>
            </div>

            <!-- MORE INFO, URLs -->
            <div class="form-group center-flex-content">
              <%= f.label :more_info, class:'label-baseline caps' %>
              <%= f.text_field :more_info, class: 'form form-control form-padding event-form-width', placeholder: "Provide web links here" %>
            </div>

            <!-- CONTACT NAME/EMAIL -->
            <div class="form-group">
              <%= f.label :"Contact name", class:'label-baseline caps' %>
              <%= f.text_field :contact_name, class: 'form form-control form-padding event-form-width', :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :"Contact email", class:'label-baseline caps' %>
              <%= f.email_field :contact_email, class: 'form form-control form-padding event-form-width', :required => true %>
            </div>
            <br>
            <div class="form-group">
              <%= f.submit class: 'btn btn-primary form form-control form-padding event-form-width' %>
            </div>

          </div>
        </div>

        <% end %>
        <% else %>
        <%= render 'partials/login_msg' %>
    </div>
    <% end %>
  </div>
  </div>
</div>
</div>

<%= render 'partials/footer' %>
