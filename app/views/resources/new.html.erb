<div class="wholePage">
  <!-- First section div -->
        <div class="container-fluid">
        <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-3 dash-sidebar">
          <ul class="nav nav-sidebar ">
            <%= image_tag('paperclip.png', class: 'clippy') %>
            <h2>Dashboard</h2>
            <% if user_signed_in? %>
            <li>Hello <%= current_user.first_name %>&nbsp
              <%= link_to 'Sign Out', signout_path, method: :delete %>
            </li>
              <li>
                <a href="<%= new_event_path %>" class="about-us">Add an Event</a>
              </li>
              <hr>
              <li>
                <a href="<%= new_resource_path %>" class="about-us">Add a Resource</a>
              </li>
              <hr>
              <% if is_admin? %>
            <h4 style="color:yellow;">Admin</h4>
            <li>
              <a href="<%= new_organization_path %>" class="about-us">Add Organization</a>
            </li>
            <hr>
            <li>
              <a href="<%= new_program_type_path %>" class="about-us">New Activity Type</a>
            </li>
            <hr>
            <li>
              <a href="<%= dashboard_pending_and_approved_events_path %>" class="about-us">Pending/Approved Events</a>
            </li>
            <hr>
            <li>
              <a href="<%= dashboard_pending_and_approved_resources_path %>" class="about-us">Pending/Approved Resources</a>
            </li>
            <hr>
            <% end %>
            <% else %>
            <li>
              <a href="<%= signup_path %>" class="top-right-panel">New User</a>
            </li>
            <li>
              <a href="<%= login_path %>" class="top-right-panel">Log In</a>
            </li>
              <% end %>
          </ul>
        </div>

            <div class="col-md-7" style="background-color:white;">
              <% if user_signed_in? %>
                <div class="row">
                  <div class="col-md-12">
                    <div class="container-fluid center-flex-content">
                      <div class="create-new-container">

                      <br>
                    <h2 class="bree-font" style="margin-top:0;margin-bottom:40px;margin-left:auto;margin-right: auto;">Create New Resource</h2>

                <%= form_for @resource do |f| %>
                  <div class="form-group">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form form form-control form-padding event-form-width form-padding event-form-width" %>
                  </div>

                  <div class="form-group">
                    <%= f.label "Feature Resource?" %>
                    <%= radio_button_tag(:feature, true) %>
                    <%= label_tag(:feature, "Yes") %>
                    <%= radio_button_tag(:feature, false) %>
                    <%= label_tag(:feature, "No") %>
                  </div>

                      <!--  FEATURE UNTIL add calender -->

                      <!--  REMOVE FEATURE FROM SITE is this even necessary? -->

                  <div class="form-group">
                    <%= f.label "Resource is about the situation in: " %>
                    <br>
                    <%= radio_button_tag(:feature_location, "Delta") %>
                    <%= label_tag(:feature_location, "Delta") %>
                    <%= radio_button_tag(:feature_location, "BC") %>
                    <%= label_tag(:feature_location, "BC") %>
                    <%= radio_button_tag(:feature_location, "Canada") %>
                    <%= label_tag(:feature_location, "Canada") %>
                    <%= radio_button_tag(:feature_location, "Not Relevent") %>
                    <%= label_tag(:feature_location, "Not Relevent") %>
                  </div>

                  <div class="form-group">
                    <%= f.label :Topic %>
                    <%= f.collection_select :topic_ids,
                      Topic.all,
                      :id,
                      :name,
                      {},
                      { multiple: true, class: 'chosen-select'}
                      %>
                  </div>

                      <div class="form-group">
                        <%#= f.label :age_group %>
                        <%#= radio_button_tag(:age, "0-5") %>
                        <%#= label_tag(:age, "0-5") %>
                        <%#= radio_button_tag(:age, "6-12") %>
                        <%#= label_tag(:age, "6-12") %>
                        <%#= radio_button_tag(:age, "adult") %>
                        <%#= label_tag(:age, "adult") %>
                        <%#= radio_button_tag(:age, "all") %>
                        <%#= label_tag(:age, "all") %>
                      </div>


                  <!-- <div class="form-group">
                    <%= f.label :tags %>
                    <%= f.text_field :tags, class: "form form-control form-padding event-form-width" %>
                  </div> -->

                      <div class="form-group">
                        <%= f.label :description %>
                        <%= f.text_area :description, class: "form form-control form-padding event-form-width", rows: 10 %>
                      </div>

                      <div class="form-group">
                        <%= f.label :contact_name %>
                        <%= f.text_field :name, class: "form form-control form-padding event-form-width" %>
                      </div>

                      <div class="form-group">
                        <%= f.label :contact_email %>
                        <%= email_field(:user, :address, class: "form form-control form-padding event-form-width") %>
                      </div>

                  <h1>Dates</h1>

                    <label for='start_date'>Start Date</label>
                    <input type="text" class='datepicker form form-control form-padding event-form-width' placeholder="MM/DD/YYYY" >

                    <script type="text/javascript">
                      $(document).ready(function(){
                        $('.datepicker').datepicker();
                      });
                    </script>

                    <label for='end_date'>End Date</label>
                    <input type="text" class='datepicker form form-control form-padding event-form-width' placeholder="MM/DD/YYYY" >

                    <script type="text/javascript">
                      $(document).ready(function(){
                        $('.datepicker').datepicker();
                      });
                    </script>

                  <h1> Times </h1>
                  <div class="form-group">
                    <%= f.label :"Start Time" %>
                    <%= f.text_field :feature_start_time, class: 'form form-control form-padding event-form-width' %>
                    <%= f.label :"End Time" %>
                    <%= f.text_field :feature_end_time, class: 'form form-control form-padding event-form-width' %>
                  </div>

                  <br>
                  <div class="form-group">
                    <%= f.submit class: 'btn btn-primary form form-control form-padding event-form-width' %>
                  </div>


                  </div>
                </div>
                <div class="col-md-1"></div>
              </div>
              <% end %>
              <% else %>
              <div>
                <p>
                  Dashboard section is meant to publish a Resource and/or Event. In order to proceed you must have an account with us. Please Log In or create a New User.
                  <br>
                    <!-- <%= link_to 'New User', signup_path, class: 'top-right-panel' %>&nbsp -->
                  <!-- <div class="">
                  <%= link_to 'Log In', login_path, class: 'top-right-panel' %>&nbsp
                </div> -->
              </p>
              <br>
              <p>
                If you don't want to proceed, please feel free to go elsewhere in our site.
              </p>
            </div>
            </div>
            <% end %>

          </div>
        </div>
      </div>

      <!-- Rainbow Footer-->

      <div class="container-fluid happy-rainbow">
        <div class="row">
          <div class="col-md-12">

            <%= image_tag("rainbow-footer-group.svg", class:"center-block") %>

          </div>
        </div>
      </div>
