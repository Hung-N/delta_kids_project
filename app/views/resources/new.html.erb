<div class="wholePage">
  <!-- First section div -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 content">

      <%= render 'partials/dash_sidebar' %>

      <div class="col-xs-12 col-sm-12 col-md-9 dash-main-content" style="background-color:white;">
        <% if user_signed_in? %>
        <div class="container-fluid center-flex-content">
          <div class="create-new-container">
            <br>
            <h2 class="bree-font" style="margin-top:0;margin-bottom:40px;margin-left:auto;margin-right: auto;">Create New Resource</h2>

            <%= form_for @resource do |f| %>

            <div class="form-group center-flex-content">
              <%= f.label :name, class: "label-baseline" %>
              <%= f.text_field :name, class: "form form-control form-padding event-form-width" %>
            </div>
            <hr>
            <div class="form-group center-flex-content">
              <%= f.label "Feature Resource?", class:'label-baseline caps' %>
              <div class="margin-right">
                <%= f.radio_button(:feature, true) %>
                <%= label_tag(:feature, "Yes", class:'radio-spacing') %>
                <%= f.radio_button(:feature, false, :checked => true) %>
                <%= label_tag(:feature, "No", class:'radio-spacing') %>
              </div>
            </div>
            <!--  FEATURE UNTIL add calender -->
            <hr>
            <div class="margin-right">
              <%= f.label "Resource is about the situation in: ", class:'font-16 center-flex-content', style:'align-self: center;padding-right: 5%;' %>
            </div>
            <div class="form-group center-flex-content">
                <%= f.radio_button(:resource_location, "Delta",:checked => true) %>
                <%= label_tag(:resource_location, "Delta", class:'radio-spacing') %>
                <%= f.radio_button(:resource_location, "BC") %>
                <%= label_tag(:resource_location, "BC", class:'radio-spacing') %>
                <br>
                <%= f.radio_button(:resource_location, "Canada") %>
                <%= label_tag(:resource_location, "Canada", class:'radio-spacing') %>
                <%= f.radio_button(:resource_location, "N/A") %>
                <%= label_tag(:resource_location, "N/A", class:'radio-spacing') %>
            </div>

            <div class="margin-right">
              <%= f.label "Resource Type: ", class:'font-16 center-flex-content', style:'align-self: center;padding-right: 5%;' %>
            </div>
            <div class="form-group center-flex-content">
                <%= f.radio_button(:resource_type, "Research",:checked => true) %>
                <%= label_tag(:resource_type, "Research", class:'radio-spacing') %>
                <%= f.radio_button(:resource_type, "Report") %>
                <%= label_tag(:resource_type, "Report", class:'radio-spacing') %>
                <br>
                <%= f.radio_button(:resource_type, "Tips & Guidelines") %>
                <%= label_tag(:resource_type, "Tips & Guidelines", class:'radio-spacing') %>
            </div>
            <hr>
            <div class="form-group center-flex-content">
              <%= f.label :Topic, class:'label-baseline' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :topic_ids,
                Topic.all,
                :id,
                :topic_name,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

            <div class="form-group center-flex-content">
              <%= f.label :age_group, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :age_group_ids,
                AgeGroup.all,
                :id,
                :age,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

            <div class="form-group center-flex-content">
              <%= f.label :Tags, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :tag_ids,
                Tag.all,
                :id,
                :name,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

          <div class="form-group">
            <%= f.label :description, class:'label-baseline' %>
            <%= f.text_area :description, class: 'form form-control form-padding event-form-width caps' %>
          </div>

          <!-- FILE UPLOADER -->
          <div class="form-group center-flex-content">
            <%= f.label :resource_file, class: "label-baseline" %>
            <%= f.file_field :resource_file %>
          </div>

          <div class="form-group">
            <%= f.label :"Contact name", class:'label-baseline caps' %>
            <%= f.text_field :contact_name, class: 'form form-control form-padding event-form-width' %>
          </div>

          <div class="form-group">
            <%= f.label :"Contact email", class:'label-baseline caps' %>
            <%= f.email_field :contact_email, class: 'form form-control form-padding event-form-width' %>
          </div>
          <br>
          <div class="form-group">
            <%= f.submit class: 'btn btn-primary form form-control form-padding event-form-width' %>
          </div>


        </div>
      </div>
    </div>
    </div>
    <% end %>
    <% else %>
    <%= render 'partials/login_msg' %>
    <% end %>

  </div>
  </div>
</div>


<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
