<div class="wholePage">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 content">

      <%= render 'partials/dash_sidebar' %>

      <div class="col-xs-12 col-sm-8 col-md-9 dash-main-content" style="background-color:white;">
        <% if user_signed_in? %>
        <% if is_admin? %>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="container-fluid">
              <br>
            <p class='font-20'><strong>Title: </strong><%= @whats_new_item.title %></p>
            <p class='font-20'><strong>Description: </strong><%= @whats_new_item.description %></p>
            <p class='font-20'><strong>Address: </strong><%= @whats_new_item.address %></p>
            <p class='font-20'><strong>Phone: </strong><%= @whats_new_item.phone %></p>
            <p class='font-20'><strong>Email: </strong><%= @whats_new_item.email %></p>
            <p class='font-20'><strong>Website: </strong><%= @whats_new_item.website_url %></p>
            <p class='font-20'><strong>Image: </strong></p>
              <div class="">
                <%= image_tag(@whats_new_item.image_url.to_s, style:"width:100%;height:100%") %>
              </div>
              <br>
              <br>
              <div class="center-flex-content">
                <%= link_to 'Edit', edit_whats_new_item_path(@whats_new_item),
                class: 'btn btn-success edit-delete-btn-width'  %>

                <%= link_to 'Delete', whats_new_item_path(@whats_new_item),
                method: :delete,
                data: {confirm: 'Are you sure?'},
                class: 'btn btn-danger form-padding edit-delete-btn-width', style:'color:white !important;' %>
              </div>

              <br>

            </div>
          </div>
        </div>
        <% else %>
        <%= render 'partials/login_msg' %>
        <% end %>
        <br>
      </div>
    </div>
  </div>
  </div>
  <% else %>
  <%= render 'partials/login_msg' %>
</div>
</div>
</div>
<% end %>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
