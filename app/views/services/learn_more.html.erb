<div class="wholePage">
  <div class="container-fluid light-blue-bg-color">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="hidden-xs hidden-sm col-md-1"></div>
      <div class="col-xs-12 col-sm-12 col-md-7">
        <!--  left column -->
        <div class="container-fluid " id="feature-box">
          <!-- set the image to be displayed -->
          <%= image_tag @service.image_url.to_s, class: "learn-more-image" %>

          <p class="font-16"></p>
          <hr>

          <!-- text body below image -->
          <div class="container-fluid" style="padding-left:30px">
            <p class="bree-font"><%= @service.organization.name %></p>
            <p class="font-16"><%= @service.service_description %></p>
          </div>

          <!-- contact information -->
          <div class="container-fluid">
            <hr>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="col-xs-12 col-sm-6 col-md-6">
                <% if @service.organization.address.present?%>
                <p class="font-16"><strong>Address:</strong> <%= @service.organization.address %></p>
                <% end %>
              </div>

              <div class="col-xs-12 col-sm-6 col-md-6">
                <% if @service.organization.phone.present?%>
                <p class="font-16">
                  <i class="fa fa-phone" aria-hidden="true"></i>
                  &nbsp&nbsp&nbsp
                  <%= @service.organization.phone %>
                </p>
                <% end %>
                <p class="font-16" style="">
                  <% if @service.organization.website.present?%>
                  <i class="fa fa-globe" aria-hidden="true">
                  </i>&nbsp&nbsp&nbsp
                  <%= link_to @service.organization.website,
                  @service.organization.website,
                   :target => "_blank", class:"wb-all"%>
                </p>
                <% end %>
              </div>
            </div>
            </div>
          </div>

          <!-- Share Links -->
          <div class="container-fluid share-section">
            <hr>
            <h2>Share</h2>
            <br>
            <!-- share buttons -->
            <%= social_share_button_tag(@service.service_description, :url => "#{request.protocol}#{request.host_with_port}#{request.fullpath}", :image => @service.image_url.to_s) %>
          </div>
        </div>
        <br>
      </div> <!-- col -->
      <!-- left column -->
      <!--  right column -->
      <div class="col-xs-12 col-sm-12 col-md-3">
        <div>
          <h1 class="remove-h-margin bree-font">Similar Services</h1>
        </div>
        <br>

        <% @similar_services.each do |service| %>
        <div class="similar-events-box">
          <%= image_tag service.image_url.to_s, class: "similar-events-image fit-img" %>
          <div class="info-tag">
            <p class="ellipsis-1 bree-font" style="font-size:24px;margin-bottom:2px;"><%= service.organization.name %>

            <p class="font-16 ellipsis-4"><%= service.service_description %>
            <br>
            </p>

              <p><%= link_to 'Learn More', service_learn_more_path(service), class: "font-16 learn-more-link" %></p>
            <br>
          </div>
        </div>
        <br>
        <% end %>
      </div> <!-- col -->
      <div class="hidden-xs hidden-sm col-md-1"></div>
    </div> <!-- row -->
    <!--  right column -->
    </div>
    </div>
    </div>

    <!-- Rainbow Footer-->

    <%= render 'partials/footer' %>
