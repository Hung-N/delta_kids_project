<div class="wholePage">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 content">

        <%= render 'partials/dash_sidebar' %>

        <div class="col-md-9 dash-main-content" style="background-color:white;">
          <% if user_signed_in? %>
          <% if is_admin? %>
          <div class="row">
            <div class="col-md-12">
                  <div class="container-fluid">
                    <br>

                  <p class="bree-font">Edit Event</p>
                  <h4 class='font-20'><strong>Title: </strong><%= @event.title %></h4>
                  <p class='font-20'><strong>Start Date: </strong><%= @event.start_date %></p>
                  <p class='font-20'><strong>Start Time: </strong><%= @event.start_time %></p>
                  <p class='font-20'><strong>End Date: </strong><%= @event.end_date %></p>
                  <p class='font-20'><strong>End Time: </strong><%= @event.end_time %></p>
                  <p class='font-20'><strong>Event Repeat: </strong><%= @event.event_repeat %></p>
                  <p class='font-20'><strong>Address: </strong><%= @event.address %></p>
                  <p class='font-20'><strong>Cost: </strong><%= @event.cost %></p>
                  <p class='font-20'><strong>Registration: </strong><%= @event.registration %></p>
                  <p class='font-20'><strong>Description: </strong><%= @event.description %></p>
                  <p class='font-20'><strong>Contact Name: </strong><%= @event.contact_name %></p>
                  <p class='font-20'><strong>Contact Email: </strong><%= @event.contact_email %></p>

                      <%= link_to 'Delete', event_path(@event),
                                            method: :delete,
                                            data: {confirm: 'Are you sure?'},
                                            class: 'btn btn-danger edit-delete-btn-width', style:'color:white !important;' %>

                      <%= link_to 'Edit', edit_event_path(@event),
                      class: 'btn btn-success form-padding edit-delete-btn-width'  %>


              </div>
            </div>
          </div>
          <% end %>
          <% else %>
          <div>
            <p>
              Dashboard section is meant to publish a Resource and/or Event. In order to proceed you must have an account with us. Please Log In or create a New User.
              <br>
              <!-- <%= link_to 'New User', signup_path, class: 'top-right-panel' %>&nbsp -->
              <!-- <div class="">
              <%= link_to 'Log In', login_path, class: 'top-right-panel' %>&nbsp
            </div> -->
          </p>
          <br>
          <p>
            If you don't want to proceed, please feel free to go elsewhere in our site.
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
