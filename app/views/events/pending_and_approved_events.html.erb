<div class="wholePage">

    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 content">

        <%= render 'partials/dash_sidebar' %>

        <div class="col-xs-12 col-sm-9 col-md-9 dash-main-content" style="background-color:white;">
          <% if user_signed_in? %>
          <% if is_admin? %>
          <div class="row">
            <div class="col-xs-12">
              <div class="container-fluid">
                <h1 class="bree-font mobile-font-24">Pending Events</h1>
                <br>
                <% if @events.count == 0 %>
                <p class="font-16"> There are no Pending Events at this time.</p>
                <% else %>
                <% @events.each do |event| %>

                <p class="font-16"><%= link_to event.title, event_path(event) %></p>
                <div class="flex">

                <%= form_for event do |f| %>
                  <%= f.hidden_field :approved, value: true %>
                  <%= f.submit 'Approve', class: 'btn btn-success edit-delete-btn-width' %>
                  <% end %>&nbsp
                  <%= link_to "Decline", decline_event_path(event), class: 'btn btn-danger edit-delete-btn-width'  %>
                </div>
                <hr>
                <% end %>
                <% end %>
                <div class="container-fluid center-flex-content bree-font" style="align-items:center;">
                <%= paginate @events, window: 2 %>
              </div>
              </div>
            </div>
          </div>
          <% end %>
          <% else %>
          <%= render 'partials/login_msg' %>
      </div>
      <% end %>
    </div>
  </div>

</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
