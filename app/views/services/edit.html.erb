<div class="wholePage">
  <!-- First section div -->
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 content">

      <%= render 'partials/dash_sidebar' %>

      <div class="col-xs-12 col-sm-8 col-md-9 dash-main-content" style="background-color:white;">
        <% if user_signed_in? %>
        <% if is_admin? %>
        <div class="">
          <br>
          <p class="dashboard-headers mobile-font-24">Edit Service</p>

          <%= form_for @service do |f| %>
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field">
            <%= f.label :service_description, class:'' %>
            <%= f.text_area :service_description, class: 'form form-control   caps', :required => true %>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field">
            <%= f.label :Organization, class:' caps' %>
            <div class="form-group  dropbox-container" >
              <%= f.collection_select :organization_id,
              Organization.all,
              :id,
              :name,
              {},
              { multiple: false, class: 'chosen-select form-control '}
              %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field">
            <%= f.label :service_type, class:' caps' %>
            <div class="form-group  dropbox-container" >
              <%= f.collection_select :service_type_id,
              ServiceType.all,
              :id,
              :name,
              {},
              { multiple: false, class: 'form-control '}
              %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field">
            <%= f.label :category, class:' caps' %>
            <div class="form-group  dropbox-container" >
              <%= f.collection_select :category_id,
              Category.all,
              :id,
              :name,
              {},
              { multiple: false, class: 'form-control '}
              %>
            </div>
          </div>
          <!-- IMAGE UPLOADER -->
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field">
            <%= f.label :image, "Image (jpg/png/jpeg)", class: "" %>
            <%= f.file_field :image  %>
          </div>
          <br>
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2  col-md-offset-3 form-field" style="padding-bottom:10%;">
            <%= f.submit class: 'btn btn-primary form-control  ' %>
          </div>
          <br>
          <% end %>
          <% else %>
          <%= render 'partials/login_msg' %>
          <% end %>
          <% else %>
          <%= render 'partials/login_msg' %>
          <% end %>


        </div>
      </div>
    </div>
  </div>
</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
