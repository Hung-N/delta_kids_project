<div class="wholePage">
  <!-- First section div -->
  <div class="event-section1 event-section1-container" id="event-section1">
    <div class="container-fluid ">
      <div class="row event-row">
        <div class="col-md-3" id="event-subsection1">
          <%= image_tag "filter-header.svg", class: " filter-header-img"  %>
          <br>
          <br>
          <div class="">
            <%= form_tag("/resources#results", method: :get) do %>
            <%= text_field_tag :term, params[:term] %>
            <%= submit_tag "Search", :name => nil, class:'btn-primary' %>
          </div>
          <hr>

          <div class="filterCard">
            <div class="filter-header-container">
              <p class="filterCard-header1">Topic</p>
              <a data-toggle="collapse" data-target=".collapse-for"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron"  %></a>
            </div>
            <div class="collapse-for collapse in">
              <%= check_box_tag("resource_topic[]","1", "checked") %>
              <%= label_tag(:resource_topic, "Physical Health", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_topic[]","2", "checked") %>
              <%= label_tag(:resource_topic, "Mental Health", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_topic[]","3", "checked") %>
              <%= label_tag(:resource_topic, "Child Development", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_topic[]","4", "checked") %>
              <%= label_tag(:resource_topic, "Policy", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_topic[]","5", "checked") %>
              <%= label_tag(:resource_topic, "Child Safety", class:'radio-spacing font-16') %>
              <br>
              <hr/ class="filterCard-line">
            </div>
          </div>

          <div class="filterCard">
            <div class="filter-header-container">
              <p class="filterCard-header1">Resource Covers</p>
              <a data-toggle="collapse" data-target=".collapse-for"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron"  %></a>
            </div>
            <div class="collapse-for collapse in">
              <%= check_box_tag("resource_location[]","Delta","checked") %>
              <%= label_tag(:resource_location, "Delta", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_location[]","BC","checked") %>
              <%= label_tag(:resource_location, "BC", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_location[]","Canada","checked") %>
              <%= label_tag(:resource_location, "Canada", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_location[]","N/A","checked") %>
              <%= label_tag(:resource_location, "N/A", class:'radio-spacing font-16') %>
              <br>
              <hr/ class="filterCard-line">
            </div>
          </div>


          <div class="filterCard">
            <div class="filter-header-container">
              <p class="filterCard-header1">Children Aged</p>
              <a data-toggle="collapse" data-target=".collapse-for"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron"  %></a>
            </div>
            <div class="collapse-for collapse in">
              <%= check_box_tag("resource_age_group[]","1","checked") %>
              <%= label_tag(:resource_age_group, "0-5 years", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_age_group[]","2","checked") %>
              <%= label_tag(:resource_age_group, "6-12 years", class:'radio-spacing font-16') %>
              <br>
              <hr/ class="filterCard-line">
            </div>
          </div>

          <div class="filterCard">
            <div class="filter-header-container">
              <p class="filterCard-header1">Type of Resource</p>
              <a data-toggle="collapse" data-target=".collapse-for"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron"  %></a>
            </div>
            <div class="collapse-for collapse in">
              <%= check_box_tag("resource_type[]", "Tips & Guidelines", "checked") %>
              <%= label_tag(:resource_type, "Tips & Guidelines", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_type[]", "Report", "checked") %>
              <%= label_tag(:resource_type, "Report", class:'radio-spacing font-16') %>
              <br>
              <%= check_box_tag("resource_type[]","Research", "checked") %>
              <%= label_tag(:resource_type, "Research", class:'radio-spacing font-16') %>
              <br>
              <hr/ class="filterCard-line">
            </div>
          </div>
          <div class="center-flex-content">
            <%= submit_tag 'Filter', class:"btn-primary btn-lg filter-btn" %>
          </div>
          <% end %>
          <div class="center-flex-content">
            <%= button_to "Add New Resource", new_resource_path, :method => "get", class:"btn-primary btn-lg filter-btn" %>
          </div>
        </div>
