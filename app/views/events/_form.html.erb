<div class="wholePage">
  <!-- First section div -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-3 dash-sidebar">
        <ul class="nav nav-sidebar ">
          <%= image_tag('paperclip.png', class: 'clippy') %>
          <h2 class="dashboard-headers2">Dashboard</h2>
          <% if user_signed_in? %>
          <li>
            <h4 style="color:yellow">Hello <%= current_user.first_name %>, what would you like to do today?
          </h4>
          </li>
            <li>
              <a href="<%= new_event_path %>" class="dashboard-text">Add an Event</a>
            </li>
            <hr>
            <li>
              <a href="<%= new_resource_path %>" class="dashboard-text">Add a Resource</a>
            </li>
            <hr>
            <li><%= link_to 'Sign Out', signout_path, method: :delete, class:"dashboard-text" %></li>
            <hr>
            <% if is_admin? %>
          <h4 style="color:yellow;">Admin</h4>
          <li>
            <a href="<%= new_organization_path %>" class="dashboard-text">Add Organization</a>
          </li>
          <hr>
          <li>
            <a href="<%= new_program_type_path %>" class="dashboard-text">New Activity Type</a>
          </li>
          <hr>
          <li>
            <a href="<%= dashboard_pending_and_approved_events_path %>" class="dashboard-text">Pending/Approved Events</a>
          </li>
          <hr>
          <li>
            <a href="<%= dashboard_pending_and_approved_resources_path %>" class="dashboard-text">Pending/Approved Resources</a>
          </li>
          <hr>
          <% end %>
          <% else %>
          <li>
            <a href="<%= signup_path %>" class="top-right-panel">New User</a>
          </li>
          <li>
            <a href="<%= login_path %>" class="top-right-panel">Log In</a>
          </li>
            <% end %>
        </ul>
      </div>


      <div class="col-md-7" style="background-color:white;">
        <% if user_signed_in? %>
        <div class="container-fluid center-flex-content">
          <div class="create-new-container">
            <br>
            <p class="dashboard-headers">Create New Event</p>

            <%= form_for @event do |f|  %>

            <div class="form-group center-flex-content">
              <%= f.label :title, class: "label-baseline" %>
              <%= f.text_field :title, class: 'form form-control form-padding event-form-width' %>
            </div>

            <div class="form-group center-flex-content">
              <label for='start_date' class="label-baseline">Start Date</label>
              <input type="text" class='datepicker form date-time-width' placeholder="MM/DD/YYYY" >
              <script type="text/javascript">
              $(document).ready(function(){
                $('.datepicker').datepicker();
              });
              </script>
              <%= f.label :"Start Time", class: 'form-padding caps', style:'margin:auto;' %>
              <%= f.text_field :start_time, class: 'form date-time-width' %>
            </div>

            <div>
              <script type="text/javascript">
              $(document).ready(function(){
                $('.datepicker').datepicker();
              });
              </script>

              <div class="form-group center-flex-content">
                <label for='end_date' class="label-baseline">End Date</label>
                <input type="text" class='datepicker form form-padding date-time-width' placeholder="MM/DD/YYYY">
                <%= f.label :"End Time", class: 'form-padding caps', style:'margin:auto;' %>
                <%= f.text_field :end_time, class: 'form form-padding date-time-width' %>
              </div>
            </div>
            <!-- ================== -->

            <!-- EVENT REPEAT -->
            <div class="form-group center-flex-content">
              <%= f.label :event_repeat , class:'label-baseline caps' %>
              <div class="label-baseline">
                <%= radio_button_tag(:event_repeat, "Weekly") %>
                <%= label_tag(:repeat, "Weekly", class:'radio-spacing') %>
                <%= radio_button_tag(:event_repeat, "Never") %>
                <%= label_tag(:repeat, "None", class:'radio-spacing') %>
              </div>
            </div>

            <!-- EVENT LOCATION -->
            <div class="form-group center-flex-content">
              <%= f.label :location , class:'label-baseline' %>
              <div class="">
                <%= radio_button_tag(:location, "Ladner") %>
                <%= label_tag(:loc, "Ladner", class:'radio-spacing') %>
                <%= radio_button_tag(:location, "North Delta") %>
                <%= label_tag(:loc, "North Delta", class:'radio-spacing') %>
                <%= radio_button_tag(:location, "Tsawwassen") %>
                <%= label_tag(:loc, "Tsawwassen") %>
              </div>
            </div>

            <!-- ADDRESS -->
            <div class="form-group center-flex-content">
              <%= f.label :address, class:'label-baseline' %>
              <%= f.text_field :address, class: 'form form-control form-padding event-form-width' %>
            </div>

            <!-- AGE GROUP -->
            <div class="form-group center-flex-content">
              <%= f.label :Age_group, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :age_group_ids,
                AgeGroup.all,
                :id,
                :age,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>

            <!-- <div class="form-group center-flex-content"> -->
            <%#= f.label :age_group %>
            <%#= radio_button_tag(:age_group, "0-5") %>
            <%#= label_tag(:age, "0-5") %>
            <%#= radio_button_tag(:age_group, "6-12") %>
            <%#= label_tag(:age, "6-12") %>
            <%#= radio_button_tag(:age_group, "adult") %>
            <%#= label_tag(:age, "adult") %>
            <%#= radio_button_tag(:age_group, "all") %>
            <%#= label_tag(:age, "all") %>
            <!-- </div> -->

            <!-- COST -->
            <div class="form-group center-flex-content">
              <%= f.label :event_cost, class:'label-baseline caps' %>
              <div class="label-baseline">
                <%= radio_button_tag(:event_cost, "Free") %>
                <%= label_tag(:cost, "Free", class:'radio-spacing') %>
                <%= radio_button_tag(:event_cost, "Paid") %>
                <%= label_tag(:cost, "Paid", class:'radio-spacing') %>
              </div>
            </div>

            <!-- ACTIVITY TYPE -->
            <div class="form-group center-flex-content">
              <%= f.label :service , "Activity Type", class:'label-baseline', style:'align-self: center; padding-right: 5%' %>
              <div class="label-baseline">
                <%= check_box_tag(:art_and_culture) %>
                <%= label_tag(:art_and_culture, "Art & Culture", class:'radio-spacing') %>
                <%= check_box_tag(:education) %>
                <%= label_tag(:education, "Education", class:'radio-spacing') %>
                <div class="label-baseline">
                  <%= check_box_tag(:entertainment) %>
                  <%= label_tag(:entertainment, "Entertainment", class:'radio-spacing') %>
                  <%= check_box_tag(:health) %>
                  <%= label_tag(:health, "Health", class:'radio-spacing') %>
                  <br>
                  <%= check_box_tag(:sports) %>
                  <%= label_tag(:sports, "Sports", class:'radio-spacing') %>
                </div>
              </div>
            </div>

            <!-- TAGS -->
            <div class="form-group center-flex-content">
              <%= f.label :tags, class:'label-baseline caps' %>
              <div class="form-group event-form-width dropbox-container">
                <%= f.collection_select :age_group_ids,
                Tag.all,
                :id,
                :name,
                {},
                { multiple: true, class: 'chosen-select form-control form-padding'}
                %>
              </div>
            </div>
            <!-- REGISTRATION -->
            <div class="form-group center-flex-content">
              <%= f.label :location, "Registration", class:'label-baseline' %>
              <div class="label-baseline">
                <%= radio_button_tag(:location, "Drop-in") %>
                <%= label_tag(:loc, "Drop-in", class:'radio-spacing') %>
                <%= radio_button_tag(:location, "Registration Required") %>
                <%= label_tag(:loc, "Registration Required", class:'radio-spacing') %>
              </div>
            </div>
            <!-- EVENT DESCRIPTION -->
            <div class="form-group">
              <%= f.label :description, class:'label-baseline' %>
              <%= f.text_area :description, class: 'form form-control form-padding event-form-width' %>
            </div>

            <!-- MORE INFO , LINKS  -->
            <!-- PLACEHOLDER, NEED TO COME BACK AND DO -->
            <h3>UPLOAD PHOTO PLACEHOLDER</h3>
            <h3>MORE INFO, LINKS PLACEHOLDER</h3>
            <div class="form-group">
              <%= f.label :"Contact name", class:'label-baseline caps' %>
              <%= f.text_field :contact_name, class: 'form form-control form-padding event-form-width' %>
            </div>

            <div class="form-group">
              <%= f.label :"Contact email", class:'label-baseline caps' %>
              <%= f.email_field :contact_email, class: 'form form-control form-padding event-form-width' %>
            </div>

            <br>
            <div class="form-group">
              <%= f.submit class: 'btn btn-primary form form-control form-padding event-form-width' %>
            </div>

          </div>
        </div>

        <% end %>
        <% else %>
        <div>
          <p>
            Dashboard section is meant to publish a Resource and/or Event. In order to proceed you must have an account with us. Please Log In or create a New User.
            <br>
            <!-- <%= link_to 'New User', signup_path, class: 'top-right-panel' %>&nbsp -->
            <!-- <div class="">
            <%= link_to 'Log In', login_path, class: 'top-right-panel' %>&nbsp
          </div> -->
        </p>
        <br>
        <p>
          If you don't want to proceed, please feel free to go elsewhere in our site.
        </p>
      </div>
      <div class="col-md-1"></div>
    </div>
    <% end %>

  </div>
</div>
</div>

<!-- Rainbow Footer-->

<div class="container-fluid happy-rainbow">
  <div class="row">
    <div class="col-md-12">

      <%= image_tag("rainbow-footer-group.svg", class:"center-block") %>

    </div>
  </div>
</div>
