<div class="wholePage">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 content">

        <%= render 'partials/dash_sidebar' %>

        <div class="col-md-9 dash-main-content" style="background-color:white;">
          <% if user_signed_in? %>
          <% if is_admin? %>
          <div class="row">
            <div class="col-md-12">
              <div class="container-fluid">
                <h1 class="bree-font">Pending Resources</h1>
                <br>
                <% if @resources.count == 0 %>
                <p class="font-16"> There are no Pending Resources at this time.</p>
                <% else %>
                <% @resources.each do |resource| %>

                <p class="font-16"><%= link_to resource.name, resource_path(resource) %></p>
                <%= form_for resource do |f| %>
                  <%= f.hidden_field :approved, value: true %>
                  <%= f.submit 'Approve', class: 'btn btn-default edit-delete-btn-width' %>
                  <%= f.submit 'Decline', class: 'btn btn-default edit-delete-btn-width' %>
                  <hr>
                  <% end %>
                <% end %>
                <% end %>
                <div class="container-fluid center-flex-content bree-font" style="align-items:center;">
                <%= paginate @resources, window: 2 %>
              </div>
              </div>
            </div>
          </div>
          <% end %>
          <% else %>
          <%= render 'partials/login_msg' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
