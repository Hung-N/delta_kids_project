<div class="wholePage">
  <div class="row">
    <div class="col-xs-12 content">

      <%= render 'partials/dash_sidebar' %>

      <div class="col-xs-12 col-sm-8 col-md-9 dash-main-content" style="background-color:white;">
        <% if user_signed_in? %>
          <div class="col-xs-12">
            <div class="container-fluid">
              <br>

              <p class="bree-font">Tag</p>
              <p class='font-20'><strong>Tag ID: </strong><%= @tag.id %></p>
              <p class="font-20" style="white-space: pre-line;"><strong>Tag Name: </strong><%= @tag.name %></p>
              <br>
              <% if is_admin? %>
                <div class="center-flex-content">

                  <%= link_to 'Edit', edit_tag_path(@tag),
                              class: 'btn btn-success form-padding edit-delete-btn-width',style:"margin-right:5%;"  %>

                  <%= link_to 'Delete', tag_path(@tag),
                              method: :delete,
                              data: {confirm: 'Are you sure?'},
                              class: 'btn btn-danger edit-delete-btn-width', style:'color:white !important;' %>
                </div>
                <br>
              <% end %>
            </div>
          </div>
        <% else %>
          <div>
            <p>
              Dashboard section is meant to publish a Resource and/or Event. In order to proceed you must have an account with us. Please Log In or create a New User.
              <br>
              <!-- <%= link_to 'New User', signup_path, class: 'top-right-panel' %>&nbsp -->
              <!-- <div class="">
            <%= link_to 'Log In', login_path, class: 'top-right-panel' %>&nbsp
          </div> -->
            </p>
            <br>
            <p>
              If you don't want to proceed, please feel free to go elsewhere in our site.
            </p>
          </div>
          </div>
        <% end %>
        </div>
  </div>
</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
