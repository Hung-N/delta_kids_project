<div class="container new-admin-form">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h2>Create New Resource</h2>

  <%= form_for @resource do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Feature Resource?" %>
      <%= radio_button_tag(:feature, true) %>
      <%= label_tag(:feature, "Yes") %>
      <%= radio_button_tag(:feature, false) %>
      <%= label_tag(:feature, "No") %>
    </div>

        <!--  FEATURE UNTIL add calender -->

        <!--  REMOVE FEATURE FROM SITE is this even necessary? -->

    <div class="form-group">
      <%= f.label "Resource is about the situation in: " %>
      <br>
      <%= radio_button_tag(:feature_location, "Delta") %>
      <%= label_tag(:feature_location, "Delta") %>
      <%= radio_button_tag(:feature_location, "BC") %>
      <%= label_tag(:feature_location, "BC") %>
      <%= radio_button_tag(:feature_location, "Canada") %>
      <%= label_tag(:feature_location, "Canada") %>
      <%= radio_button_tag(:feature_location, "Not Relevent") %>
      <%= label_tag(:feature_location, "Not Relevent") %>
    </div>

    <div class="form-group">
      <%= f.label :Topic %>
      <%= f.collection_select :topic_ids,
        Topic.all,
        :id,
        :name,
        {},
        { multiple: true, class: 'chosen-select'}
        %>
    </div>

        <div class="form-group">
          <%#= f.label :age_group %>
          <%#= radio_button_tag(:age, "0-5") %>
          <%#= label_tag(:age, "0-5") %>
          <%#= radio_button_tag(:age, "6-12") %>
          <%#= label_tag(:age, "6-12") %>
          <%#= radio_button_tag(:age, "adult") %>
          <%#= label_tag(:age, "adult") %>
          <%#= radio_button_tag(:age, "all") %>
          <%#= label_tag(:age, "all") %>
        </div>


    <!-- <div class="form-group">
      <%= f.label :tags %>
      <%= f.text_field :tags, class: "form-control" %>
    </div> -->

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", rows: 10 %>
        </div>

        <div class="form-group">
          <%= f.label :contact_name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :contact_email %>
          <%= email_field(:user, :address, class: "form-control") %>
        </div>

    <h1>Dates</h1>

      <label for='start_date'>Start Date</label>
      <input type="text" class='datepicker form-control' placeholder="MM/DD/YYYY" >

      <script type="text/javascript">
        $(document).ready(function(){
          $('.datepicker').datepicker();
        });
      </script>

      <label for='end_date'>End Date</label>
      <input type="text" class='datepicker form-control' placeholder="MM/DD/YYYY" >

      <script type="text/javascript">
        $(document).ready(function(){
          $('.datepicker').datepicker();
        });
      </script>

    <h1> Times </h1>
    <div class="form-group">
      <%= f.label :"Start Time" %>
      <%= f.text_field :feature_start_time, class: 'form-control' %>
      <%= f.label :"End Time" %>
      <%= f.text_field :feature_end_time, class: 'form-control' %>
    </div>

    <br>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary form-control' %>
    </div>


      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
