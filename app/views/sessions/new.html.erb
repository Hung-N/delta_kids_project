<div class="wholePage">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 login-image">
      <div class="col-xs-10 col-xs-offset-1 login-container" style="min-height:800px;">
        <h1 class="login-header">User Sign In</h1>
        <%= form_tag sessions_path do %>
          <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4 form-field">
            <%= label_tag :email, nil, class: 'login-header' %>:
            <%= email_field_tag :email, "", class: 'form-control' %>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4 form-field">
            <%= label_tag :password, nil, class: 'login-header' %>:
            <%= link_to "(Forgot password?)", new_password_reset_path %>
            <%= password_field_tag :password, "", class: 'form-control' %>
          </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4 form-field">
          <%= submit_tag "Log In", class: 'btn btn-primary' %>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4 form-field">
            <div class="field">
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <%= label_tag :remember_me %>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
