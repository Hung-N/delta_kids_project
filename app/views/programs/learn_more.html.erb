<div class="wholePage">
  <div class="container-fluid light-blue-bg-color">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="hidden-xs hidden-sm col-md-1"></div>
      <div class="col-xs-12 col-sm-12 col-md-7">
        <!--  left column -->
        <div class="container-fluid " id="feature-box">
          <!-- set the image to be displayed -->
          <%= image_tag(@program.image_url.to_s, class:"learn-more-image img-responsive") %>
          <p class="font-16"></p>
          <hr>

          <!-- text body below image -->
          <div class="container-fluid" style="padding-left:30px">
            <p class="bree-font"><%= @program.organization.name %></p>
            <p class="font-16"><%= @program.description %></p>
          </div>

          <!-- contact information -->
          <div class="container-fluid">
            <hr>
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12">
              <div class="col-xs-12 col-sm-6 col-md-6">
                <% if @program.organization.address.present?%>
                <p class="font-16"><strong>Address:</strong> <%= @program.organization.address %></p>
                <% end %>
              </div>

              <div class="col-xs-12 col-sm-6 col-md-6">
                <% if @program.organization.phone.present?%>
                <p class="font-16">
                  <i class="fa fa-phone" aria-hidden="true"></i>
                  &nbsp&nbsp&nbsp
                  <%= @program.organization.phone %>
                </p>
                <% end %>
                <p class="font-16" style="">
                  <% if @program.organization.website.present?%>
                  <i class="fa fa-globe" aria-hidden="true">
                  </i>&nbsp&nbsp&nbsp
                  <%= link_to @program.organization.website,
                  @program.organization.website,
                  :target => "_blank", class:"wb-all"%>
                </p>
                <% end %>
              </div>
            </div>
          </div>
          </div>

          <!-- Share Links -->
          <div class="container-fluid share-section">
            <hr>
            <h2>Share</h2>
            <br>
            <!-- share buttons -->
            <%= social_share_button_tag(@program.description, :url => "#{request.protocol}#{request.host_with_port}#{request.fullpath}", :image => @program.image_url.to_s) %>
          </div>
        </div>
        <br>
      </div> <!-- col -->
      <!-- left column -->
      <!--  right column -->
      <div class="col-xs-12 col-sm-12 col-md-3">
        <div>
          <h1 class="remove-h-margin bree-font" style="font-size:34px;">Similar Programs</h1>
        </div>
        <br>

        <% @similar_programs.each do |program| %>
        <div class="similar-events-box">
          <%= image_tag program.image_url.to_s, class: "similar-events-image fit-img" %>
          <div class="info-tag">
            <p class="ellipsis-1 bree-font" style="font-size:24px;margin-bottom:2px;"><%= program.organization.name %>

              <p class="font-16 ellipsis-4"><%= program.description %>
                <br>
              </p>

              <p class="font-16"><%= link_to 'Learn More', program_learn_more_path(program), class: "learn-more-link"  %></p>
              <br>
            </div>
          </div>
          <br>
          <% end %>
        </div> <!-- col -->
        <div class="hidden-xs hidden-sm col-md-1"></div>
      </div> <!-- row -->
      <!--  right column -->
    </div>
    </div>
  </div>

  <!-- Rainbow Footer-->

  <%= render 'partials/footer' %>
