<div class="wholePage">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 content">
      <%= render 'partials/dash_sidebar' %>
      <div class="col-xs-12 col-sm-8 col-md-9 dash-main-content">
        <% if user_signed_in? %>
          <% if is_admin? %>
            <div class="container-fluid">
              <h1 class="bree-font">Events</h1>
              <br>
              <div class="filter-header-container">
                <p class="filterCard-header1">Featured (<%= @featured_events.count %>)</p>
                <a data-toggle="collapse" data-toggle="chevron-anchor" data-target=".collapse-featured" class="chevron-anchor"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron" %></a>
              </div>
              <div class="collapse-featured collapse">
                <br>
                <% @featured_events.each do |event| %>
                  <p class="font-16">
                    <% if event.end_date < Time.now.to_date === true %>
                      <span style="color:red">(OLD)</span>
                    <% end %>
                    <% if event.featured === true %>
                      (Featured)
                    <% end %>
                    <%= link_to event.title, event_path(event) %>
                  </p>
                  <hr>
                <% end %>
              </div>
              <hr class="nav-hr">
              <br>
              <div class="filter-header-container">
                <p class="filterCard-header1">Old (<%= @old_events.count %>)</p>
                <a data-toggle="collapse" data-toggle="chevron-anchor" data-target=".collapse-old" class="chevron-anchor"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron" %></a>
              </div>
              <div class="collapse-old collapse">
                <br>
                <% @old_events.each do |event| %>
                  <p class="font-16">
                    <% if event.end_date < Time.now.to_date === true %>
                      <span style="color:red">(OLD)</span>
                    <% end %>
                    <% if event.featured === true %>
                      (Featured)
                    <% end %>
                    <%= link_to event.title, event_path(event) %>
                  </p>
                  <hr>
                <% end %>
              </div>
              <hr class="nav-hr">
              <br>
              <div class="filter-header-container">
                <p class="filterCard-header1">Current Events (<%= @events.count %>)</p>
                <a data-toggle="collapse" data-toggle="chevron-anchor" data-target=".collapse-current-events" class="chevron-anchor"><%= image_tag "icon-chevron-up.svg", class: "filter-header-chevron a-chevron" %></a>
              </div>
              <div class="collapse-current-events collapse in">
                <br>
                <% @events_results.each do |event| %>
                  <p class="font-16">
                    <% if event.end_date < Time.now.to_date === true %>
                      <span style="color:red">(OLD)</span>
                    <% end %>
                    <%= link_to event.title, event_path(event) %>
                  </p>
                  <hr>
                <% end %>
                <div class="container-fluid center-flex-content bree-font" style="align-items:center;">
                  <%= paginate @events_results, window: 2 %>
                </div>
              </div>
              <br>
              <hr class="nav-hr">
            </div>
          <% else %>
            <div class="container-fluid">
              <h1 class="bree-font">Events (
                <% @events_public.count %>)</h1>
              <br>
              <% @events_public.each do |event| %>
                <p class="font-16"><%= link_to event.title, event_path(event) %></p>
                <hr>
              <% end %>
              <div class="container-fluid center-flex-content bree-font" style="align-items:center;">
                <%= paginate @events_public, window: 2 %>
              </div>
            </div>
          <% end %>

        <% else %>
          <%= render 'partials/login_msg' %>
          </div>
        <% end %>
        </div>
  </div>
</div>

<!-- Rainbow Footer-->

<%= render 'partials/footer' %>
